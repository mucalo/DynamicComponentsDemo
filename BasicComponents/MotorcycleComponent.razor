<h3>Motorcycle Component</h3>
<div>Motorcycle created at: @CreatedAt.ToString()</div>
<button @onclick="() => { OnButtonClicked.InvokeAsync(ActionDescription); }" >Click the Motorcycle button</button>

@code {
    [Parameter]
    public DateTime CreatedAt { get; set; }
    [Parameter]
    public EventCallback<string> OnButtonClicked { get; set; }
    protected string ActionDescription = "Motorcycle Button Clicked!";
}